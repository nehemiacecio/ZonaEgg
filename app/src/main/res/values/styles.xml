<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="primaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="secondaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:background">@drawable/secondary_button</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="primaryBackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:background">@drawable/primary_back_button</item>
        <item name="tint">?colorPrimary</item>
    </style>

    <style name="formEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">-4dp</item>
        <item name="android:layout_marginStart">-4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlActivated">@color/blue_500</item>
        <item name="colorControlHighlight">?colorPrimary</item>
    </style>

    <style name="m_top_20">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="m_top_40">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="p_vertical_16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <style name="credits_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">?neutral6</item>
    </style>

</resources>